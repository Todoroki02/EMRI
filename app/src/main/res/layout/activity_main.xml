<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView to display the transcript -->
    <TextView
        android:id="@+id/transcriptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transcript will appear here"
        android:layout_centerInParent="true" />

    <!-- TextView to display the Boolean result -->
    <TextView
        android:id="@+id/booleanTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result: "
        android:layout_below="@id/transcriptTextView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
